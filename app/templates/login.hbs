<div class="loginWrapper">
	<h1>Sign in</h1>
	<div class="ui middle aligned relaxed fitted divided stackable grid">
		<div class="eight wide column">
	    	<form class="ui form segment" {{action 'authenticate' on='submit'}}>
	      		<div class="field">
	        		<label>Username</label>
	        		<div class="ui left icon input">
	          			{{input type='text' placeholder='Username' value=identification classBinding='loginFailed'}}
	          			<i class="user icon"></i>
	        		</div>
	      		</div>
	      		<div class="field">
	        		<label>Password</label>
	        		<div  {{bind-attr class=':ui :left :icon :input'}}>
	          			{{input type='password' value=password classBinding='loginFailed'}}
	          			<i class="lock icon"></i>
	        		</div>
	      		</div>
	      		<button type="submit" class="ui blue submit button">Login</button>

				{{#if loginFailed}}

					<div class="ui negative message">
						<i class="close icon" {{action 'closeMessage' on='click'}}></i>
						<div class="header">
						Authentication failed
						</div>
						<p>Wrong username and/or password!</p>
					</div>
				{{/if}}
	    	</form>
		</div>
		<div class="center aligned eight wide column">
			{{#link-to 'signup' class="huge green ui labeled icon button" }}
	  			<i class="signup icon"></i>Sign Up
	    	{{/link-to}}
		</div>
	</div>
</div>
